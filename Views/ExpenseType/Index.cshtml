@model List<ExpenseType>

<script>
    $(document).ready(function () {
        $("#CreateExpenseType").click(function () {
            window.location.href = '/ExpenseType/Create';
        });
    });
</script>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Expense Type</a></li>
                    <li class="breadcrumb-item active">Detail</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Expense Type Details</h3>
                <button type="button" class="btn btn-primary btn-flat" style="margin-left: 1000px;" id="CreateExpenseType">Create Expense Type</button>
            </div>
            @if (Model != null && Model.Count() > 0)
            {
                <div class="card-body">
                    <table id="ExpenseTypes" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Expense Type Code</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@data.ExpenseTypeCode</td>
                                    <td>@data.ExpenseTypeDescription</td>
                                    <td><a href="@Url.Action("EditExpense", "ExpenseType", new { ExpenseType = data.ExpenseTypeId })">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(function () {
            $.noConflict();
            $("#ExpenseTypes").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false
            }).buttons().container().appendTo('#ExpenseTypes_wrapper .col-md-6:eq(0)');
        });
    });
</script>